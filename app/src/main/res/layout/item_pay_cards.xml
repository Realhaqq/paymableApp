<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40.3dp"
    android:layout_marginTop="11.7dp"
    android:layout_marginRight="11.7dp"
    android:layout_marginLeft="11.7dp"
    android:layout_marginBottom="2dp"
    android:elevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp">
    <LinearLayout
        android:background="@drawable/background_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/visa" />

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/cardNo"
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/_4029_1213"
                android:textColor="@color/black_txt_Color"
                android:textSize="16.7sp"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>