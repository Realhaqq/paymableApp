<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62.7dp"
            android:orientation="horizontal"
            android:id="@+id/ll1"
            android:layout_alignParentTop="true"
            android:background="@color/bg_blue">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="111dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="13.7dp"
                    android:layout_marginTop="14.7dp"
                    android:src="@drawable/payw" />
            </LinearLayout>


        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="94.3dp"
            android:elevation="5dp"
            app:cardCornerRadius="3dp"
            android:layout_marginLeft="16.7dp"
            android:layout_marginRight="16.7dp"
            android:layout_marginTop="25dp"
            android:background="@color/bg_blue">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/bg_blue">
                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:paddingLeft="23.3dp"
                    android:paddingTop="16.7dp"
                    android:textColor="#8Cffffff"
                    android:text="@string/wallet_balance"
                    />


                <ImageView
                    android:id="@+id/wallet_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plus_btn"
                    android:layout_gravity="right"
                    android:layout_marginTop="-5dp"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginRight="18dp"/>



                <customfonts.MyTextView_Roboto_Light
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="23.3dp"
                    android:text="*****"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll1"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ececec"/>
                    <android.support.v4.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <customfonts.MyTextView_Roboto_Medium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11.7sp"
                                android:fontFamily="sans-serif-medium"
                                android:textStyle="normal"
                                android:textColor="@color/geryTxt"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:layout_marginLeft="17dp"
                                android:text="Bank Transactions"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#ececec"/>
                            <android.support.v7.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:id="@+id/recyclerView"
                                android:nestedScrollingEnabled="false"
                                android:background="@color/white">
                            </android.support.v7.widget.RecyclerView>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#ececec"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#ececec"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#ececec"/>
                        </LinearLayout>
                    </android.support.v4.widget.NestedScrollView>


                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="106.7dp"
                    android:layout_marginRight="8.3dp"
                    android:layout_marginLeft="8.3dp"
                    android:layout_marginTop="0dp"
                    android:elevation="1dp"/>
            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>



</android.support.v4.widget.SwipeRefreshLayout>