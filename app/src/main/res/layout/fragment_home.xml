<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomePay2Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62.7dp"
            android:orientation="horizontal"
            android:id="@+id/ll1"
            android:layout_alignParentTop="true"
            android:background="@color/bg_blue">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="111dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="13.7dp"
                    android:layout_marginTop="14.7dp"
                    android:src="@drawable/payw" />
            </LinearLayout>
            <ImageView
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/help"
                android:tint="@color/white"
                android:layout_marginTop="14.7dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll1"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/bg_blue"></LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="140.3dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="2dp">

<!--                        <android.support.v4.view.ViewPager-->
<!--                            android:id="@+id/viewPager"-->
<!--                            android:layout_width="374dp"-->
<!--                            android:layout_height="100.3dp"-->
<!--                            android:layout_gravity="center"-->
<!--                            android:clipToPadding="false"></android.support.v4.view.ViewPager>-->

<!--                        <me.relex.circleindicator.CircleIndicator-->
<!--                            android:id="@+id/indicator"-->
<!--                            android:layout_width="253dp"-->
<!--                            android:layout_height="23dp"-->
<!--                            android:layout_alignParentBottom="true"-->
<!--                            android:layout_marginTop="90dp"-->
<!--                            android:layout_gravity="center"-->
<!--                            android:minWidth="4dp"-->
<!--                            android:minHeight="4dp"-->
<!--                            app:ci_drawable="@drawable/ic_select_circle"-->
<!--                            app:ci_drawable_unselected="@drawable/ic_full_circle"-->
<!--                            app:ci_height="4dp"-->
<!--                            app:ci_width="4dp" />-->

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"/>


                    </android.support.v7.widget.CardView>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/SliderDots"
                        android:layout_below="@+id/viewPager"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginBottom="65dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_marginTop="13.6dp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:paddingLeft="16.7dp"
                                android:textColor="@color/black_txt_Color"
                                android:text="@string/recharges_amp_pay_bills"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.7dp"
                                android:background="#eef0f1"
                                android:layout_marginTop="13.1dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="22.7dp">
                                <LinearLayout
                                    android:id="@+id/card_airtime"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/mobile"
                                        />
                                    <customfonts.MyTextView_Roboto_Regular
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="11.7sp"
                                        android:layout_marginTop="13.3dp"
                                        android:fontFamily="sans-serif"
                                        android:textStyle="normal"
                                        android:textColor="@color/black_txt"
                                        android:gravity="center_horizontal"
                                        android:text="Airtime/VTU"
                                        />

                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/card_data"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/data_card"
                                        />
                                    <customfonts.MyTextView_Roboto_Regular
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="11.7sp"
                                        android:layout_marginTop="13.3dp"
                                        android:fontFamily="sans-serif"
                                        android:textStyle="normal"
                                        android:textColor="@color/black_txt"
                                        android:gravity="center_horizontal"
                                        android:text="Data Bundles"
                                        />

                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/card_electricity"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/electricity"
                                        />
                                    <customfonts.MyTextView_Roboto_Regular
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="11.7sp"
                                        android:layout_marginTop="13.3dp"
                                        android:fontFamily="sans-serif"
                                        android:textStyle="normal"
                                        android:textColor="@color/black_txt"
                                        android:gravity="center_horizontal"
                                        android:text="Electricity"
                                        />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="22.7dp">
                                <LinearLayout
                                    android:id="@+id/card_tv"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/dth"
                                        />
                                    <customfonts.MyTextView_Roboto_Regular
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="11.7sp"
                                        android:layout_marginTop="13.3dp"
                                        android:fontFamily="sans-serif"
                                        android:textStyle="normal"
                                        android:textColor="@color/black_txt"
                                        android:gravity="center_horizontal"
                                        android:text="Cable TV"
                                        />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/card_waec"
                                    android:layout_width="30dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_pinpad" />

                                    <customfonts.MyTextView_Roboto_Regular
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="13.3dp"
                                        android:fontFamily="sans-serif"
                                        android:gravity="center_horizontal"
                                        android:text="WAEC PIN"
                                        android:textColor="@color/black_txt"
                                        android:textSize="11.7sp"
                                        android:textStyle="normal" />

                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/card_jamb"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_pinpad"
                                        />
                                    <customfonts.MyTextView_Roboto_Regular
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="11.7sp"
                                        android:layout_marginTop="13.3dp"
                                        android:fontFamily="sans-serif"
                                        android:textStyle="normal"
                                        android:textColor="@color/black_txt"
                                        android:gravity="center_horizontal"
                                        android:text="JAMB e-PIN"
                                        />

                                </LinearLayout>
                            </LinearLayout>f
                            <android.support.v7.widget.RecyclerView
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/recyclerView"
                                android:paddingBottom="5dp"
                                android:nestedScrollingEnabled="false"
                                android:layout_gravity="center_horizontal">
                            </android.support.v7.widget.RecyclerView>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>



                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="106.7dp"
                    android:layout_marginRight="8.3dp"
                    android:layout_marginLeft="8.3dp"
                    android:layout_marginTop="0dp"
                    android:elevation="1dp">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="3dp"
                        android:layout_margin="2dp"
                        android:elevation="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="22.7dp">
                            <LinearLayout
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal">
                                <ImageView
                                    android:visibility="gone"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/send_money"
                                    />
                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="11.7sp"
                                    android:layout_marginTop="13.3dp"
                                    android:fontFamily="sans-serif"
                                    android:textStyle="normal"
                                    android:textColor="@color/black_txt"
                                    android:gravity="center_horizontal"
                                    android:text="@string/send_money"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal">
                                <ImageView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/request_money"
                                    />
                                <customfonts.MyTextView_Roboto_Regular
                                    android:visibility="gone"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="11.7sp"
                                    android:layout_marginTop="13.3dp"
                                    android:fontFamily="sans-serif"
                                    android:textStyle="normal"
                                    android:textColor="@color/black_txt"
                                    android:gravity="center_horizontal"
                                    android:text="Request Money"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/card_wallet"
                                android:layout_width="93dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/topup_wallet" />

                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="13.3dp"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center_horizontal"
                                    android:text="Topup Wallet"
                                    android:textColor="@color/black_txt"
                                    android:textSize="11.7sp"
                                    android:textStyle="normal" />

                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </FrameLayout>
            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>



</RelativeLayout>