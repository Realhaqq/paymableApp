<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddNewCardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/toolbar2"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginRight="26.3dp"
                android:background="@drawable/signin_rect"
                android:elevation="1dp">

                <customfonts.EditText_Roboto_Regular
                    android:id="@+id/card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:fontFamily="sans-serif"
                    android:hint="Card Number"
                    android:maxLines="1"
                    android:paddingBottom="15.7dp"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:textColor="@color/black_txt_Color"
                    android:textColorHint="@color/black_txt_Color"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textStyle="normal" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="26.3dp"
                android:background="@drawable/signin_rect"
                android:elevation="1dp">

                <customfonts.EditText_Roboto_Regular
                    android:id="@+id/card_mm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:fontFamily="sans-serif"
                    android:hint="MM"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:paddingBottom="15.7dp"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:textColor="@color/black_txt_Color"
                    android:textColorHint="@color/black_txt_Color"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textStyle="normal" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="26.3dp"
                android:background="@drawable/signin_rect"
                android:elevation="1dp">

                <customfonts.EditText_Roboto_Regular
                    android:id="@+id/card_yyyy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:fontFamily="sans-serif"
                    android:hint="YYYY"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:paddingBottom="15.7dp"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:textColor="@color/black_txt_Color"
                    android:textColorHint="@color/black_txt_Color"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textStyle="normal" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.3dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="26.3dp"
                android:background="@drawable/signin_rect"
                android:elevation="1dp">

                <customfonts.EditText_Roboto_Regular
                    android:id="@+id/card_cvv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:fontFamily="sans-serif"
                    android:hint="CVV"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:paddingBottom="15.7dp"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="15.7dp"
                    android:textColor="@color/black_txt_Color"
                    android:textColorHint="@color/black_txt_Color"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textStyle="normal" />
            </LinearLayout>



 <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ececec"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="9.5dp"
                    android:layout_marginBottom="10dp"/>



            </LinearLayout>
</LinearLayout>
    <customfonts.MyTextView_Roboto_Regular
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_blue"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:paddingTop="16.3dp"
        android:gravity="center_horizontal"
        android:text="PAY NOW">

    </customfonts.MyTextView_Roboto_Regular>

</RelativeLayout>